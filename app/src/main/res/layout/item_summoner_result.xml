<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/resultChampionImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/resultSummonerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CuernotrayamÃ³n"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/resultSummonerScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11/11/23"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/summonerSpell1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerSpell2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/summonerItem0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/summonerItem6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher_background"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>